<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/navigation_home">

    <fragment
        android:id="@+id/navigation_home"
        android:name="com.example.hw2_android_practice.ui.home.HomeFragment"
        android:label="@string/title_home"
        tools:layout="@layout/fragment_home" >
        <action
            android:id="@+id/action_navigation_home_to_sixthFragment"
            app:destination="@id/sixthFragment" />
    </fragment>

    <fragment
        android:id="@+id/navigation_dashboard"
        android:name="com.example.hw2_android_practice.ui.dashboard.DashboardFragment"
        android:label="@string/title_dashboard"
        tools:layout="@layout/fragment_dashboard" >
        <action
            android:id="@+id/action_navigation_dashboard_to_sixthFragment"
            app:destination="@id/sixthFragment" />
    </fragment>

    <fragment
        android:id="@+id/navigation_notifications"
        android:name="com.example.hw2_android_practice.ui.notifications.NotificationsFragment"
        android:label="@string/title_notifications"
        tools:layout="@layout/fragment_notifications" >
        <action
            android:id="@+id/action_navigation_notifications_to_sixthFragment"
            app:destination="@id/sixthFragment" />
    </fragment>
    <fragment
        android:id="@+id/navigation_fourth"
        android:name="com.example.hw2_android_practice.ui.fourth.FourthFragmen"
        android:label="@string/title_fourth"
        tools:layout="@layout/fragment_fourth" >
        <action
            android:id="@+id/action_navigation_fourth_to_sixthFragment"
            app:destination="@id/sixthFragment" />
    </fragment>
    <fragment
        android:id="@+id/navigation_fifth"
        android:name="com.example.hw2_android_practice.ui.fifth.FIifthFragmen"
        android:label="@string/title_fifth"
        tools:layout="@layout/fragment_f_iifth" >
        <action
            android:id="@+id/action_navigation_fifth_to_sixthFragment"
            app:destination="@id/sixthFragment" />
    </fragment>
    <fragment
        android:id="@+id/sixthFragment"
        android:name="com.example.hw2_android_practice.SixthFragment"
        android:label="fragment_sixth"
        tools:layout="@layout/fragment_sixth" />
</navigation>